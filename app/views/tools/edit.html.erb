<h1>Editing tool</h1>
<% if @tool.errors.any? %>
  <%= @tool.errors.count %>件のerrorが発生しました
  <ul>
    <% @tool.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
<%= form_with model: @tool do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Tool' %>

<% end %>
<span><%= link_to "show", tool_path(@tool.id)%></span>
<span><%= link_to "back", tools_path(@tool.id)%></span>